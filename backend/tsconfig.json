{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "../",                         // root of the project
    "paths": {
      "@/*": ["src/*"]                        // maps @/ to root/src/
    }
  },
  "include": [
    "prisma/**/*",
    "../src/**/*"                             // covers all TS files in src/
  ]
}
