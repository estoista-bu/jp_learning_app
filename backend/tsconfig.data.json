{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build-data",
    "rootDir": "../src",
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": false
  },
  "include": ["../src/data/**/*.ts"]
}
